{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "typeRoots": ["./src/typings", "node_modules/@types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
